<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">New Campgrounds</h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                          <input class="form-control" type="text" placeholder="name" name="campground[name]">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input id="image" type="file" accept="image/*" name="image" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="description" name="campground[description]">
                    </div>
                     <div class="form-group">
                        <input class="form-control" type="number" placeholder="cost" name="cost" min="0" step="0.01" required>
                    </div>
                     <div class="form-group">
                        <button class= "btn btn-lg btn-primary btn-block">Summit!!</button>
                    </div>
                    
                </form>
                <a href="/campgrounds">Go back</a>
            </div>
    </div>
</div>

